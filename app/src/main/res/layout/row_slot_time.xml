<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/d_5dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowSlotTimeTextView"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/d_80dp"
        android:background="@drawable/bg_rounded_stroked_green_25"
        android:paddingLeft="@dimen/d_10dp"
        android:paddingTop="@dimen/d_7dp"
        android:paddingRight="@dimen/d_10dp"
        android:paddingBottom="@dimen/d_7dp"
        android:text="02:30 PM"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="11sp"
        android:textColor="@color/app_text_secondary"
        app:fontFamily="@font/coresanscrregular" />

</LinearLayout>